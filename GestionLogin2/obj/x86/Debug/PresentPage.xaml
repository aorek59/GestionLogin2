<Page x:ConnectionId='1'
    x:Class="GestionLogin2.PresentPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GestionLogin2"
    xmlns:models="using:GestionLogin2.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Page.Resources>
        <DataTemplate x:Key="EleveTemplate"
                                                    >
            <Grid x:ConnectionId='4'>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <CheckBox />

                <TextBlock x:ConnectionId='5'                     Margin="10" Grid.Column="1" />
                <TextBlock x:ConnectionId='6'                        Margin="10" Grid.Column="2" />
            </Grid>
        </DataTemplate>

        <DataTemplate x:Key="SalleTemplate"
                                               >
            <TextBlock x:ConnectionId='3'                      />
        </DataTemplate>

        <DataTemplate x:Key="ClasseTemplate"
                                                     >
            <TextBlock x:ConnectionId='2'                     />
        </DataTemplate>
    </Page.Resources>

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <TextBlock Text="Validation des présent"
                   Style="{StaticResource TitleTextBlockStyle}"
                   Margin="12" />

        <Grid Grid.Row="1"
              Margin="12">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <ComboBox x:ConnectionId='9' x:Name="SelectionSalle"
                      Header="Selectionnez une salle"
                                                   
                      ItemTemplate="{StaticResource SalleTemplate}"/>



            <ComboBox x:ConnectionId='10' x:Name="SelectionClasse"
                      Header="Selectionnez une classe"
                                                    
                      ItemTemplate="{StaticResource ClasseTemplate}"
                                                                         
                      Grid.Column="1"/>

            <Grid Grid.Row="1"
                  Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <TextBlock Text="Présent" Margin="10" />
                <TextBlock Text="Nom" Margin="10" Grid.Column="1" />
                <TextBlock Text="Prénom" Margin="10" Grid.Column="2" />

                <ListView x:ConnectionId='11' x:Name="EleveListView"
                      Grid.Row="1"
                      Grid.ColumnSpan="3"
                      ItemTemplate="{StaticResource EleveTemplate}">
                    <ListView.ItemContainerStyle>
                        <Style TargetType="ListViewItem">
                            <Setter Property="HorizontalContentAlignment" Value="Stretch" />
                        </Style>
                    </ListView.ItemContainerStyle>
                </ListView>
            </Grid>
            
        </Grid>

        <Grid Grid.Row="2">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Button x:ConnectionId='7' Content="Annuler"
                    HorizontalAlignment="Center"
                                               
                        Margin="10"/>

                <Button x:ConnectionId='8' Content="Valider"
                    HorizontalAlignment="Center"
                                               
                        Margin="10"/>
            </StackPanel>
            
        </Grid>
        
    </Grid>
</Page>

